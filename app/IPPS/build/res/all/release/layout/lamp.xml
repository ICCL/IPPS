<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/layout_lamp"
              android:background="@color/DeviceLayoutBG">
    <ImageButton
            style="@style/controller"
            android:src="@drawable/lamp_off"
            android:id="@+id/lamp_img"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/lamp"
            android:layout_gravity="center"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/DeviceOff"
            android:layout_gravity="center"
            android:id="@+id/lamp_line"
            android:layout_margin="5dp">
    </LinearLayout>
</LinearLayout>