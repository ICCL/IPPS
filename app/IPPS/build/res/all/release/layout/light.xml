<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
          android:id="@+id/sensor_light"
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="#9ED3D9">
    <ImageView
            style="@style/sensor_logo"
            android:src="@drawable/light"
            android:id="@+id/imageButton" />
    <TextView
            android:layout_above="@+id/LightName"
            android:layout_gravity="center_horizontal|center_vertical"
            style="@style/sensor_value"
            android:id="@+id/val_light"/>
    <TextView
            style="@style/sensor_name"
            android:id="@+id/LightName"
            android:textColor="#ffffff"
            android:text="@string/light"/>
</RelativeLayout>