<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
          android:id="@+id/sensor_temp"
          android:orientation="vertical"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="#F47D91">
    <ImageView
            style="@style/sensor_logo"
            android:src="@drawable/temperature"
            android:id="@+id/ImgTemp" />
    <TextView
            android:layout_above="@+id/val_temp"
            android:layout_gravity="center_horizontal|center_vertical"
            style="@style/sensor_unit"
            android:text="@string/tempUnit"
            android:id="@+id/unit_temp" />
    <TextView
            android:layout_above="@+id/TempName"
            android:layout_gravity="center_horizontal|center_vertical"
            style="@style/sensor_value"
            android:id="@+id/val_temp" />
    <TextView
            style="@style/sensor_name"
            android:id="@+id/TempName"
            android:textColor="#ffffff"
            android:text="@string/temperature"/>
</RelativeLayout>