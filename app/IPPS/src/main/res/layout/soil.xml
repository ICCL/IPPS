<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
          android:id="@+id/sensor_soil"
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="#FED056">
    <ImageView
            style="@style/sensor_logo"
            android:src="@drawable/soil"
            android:id="@+id/imageButton" />
    <TextView
            android:layout_above="@+id/SoilName"
            android:layout_gravity="center_horizontal|center_vertical"
            style="@style/sensor_value"
            android:id="@+id/val_soil"/>
    <TextView
            style="@style/sensor_name"
            android:id="@+id/SoilName"
            android:textColor="#ffffff"
            android:text="@string/soil"/>
</RelativeLayout>